<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <TextView
            android:layout_width="0dp"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/card_view_phone_number_text"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/layout_add_phone_new"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:inputType="phone"
                android:gravity="center"
                android:hint="@string/edit_text_phone"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/layout_remove_phone_button"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:layout_marginRight="8dp"
                android:layout_height="24dp"
                app:civ_circle_background_color="@color/MaterialRed900"
                android:src="@drawable/ic_remove"
                android:elevation="7dp"
                />

        </LinearLayout>



</LinearLayout>